{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 3,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#f8f8f2",
                    "background": "#6272a4",
                    "leading_diamond": "\u256d\u2500\ue0b6",
                    "style": "diamond",
                    "template": " \uf120 {{ .Name }} ",
                    "type": "shell",
                    "trailing_diamond": "\ue0b0"
                },
                {
                    "foreground": "#44475a",
                    "background": "#00FFCC",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "template": " {{ .UserName }} ",
                    "type": "session"
                },
                {
                    "foreground": "#f8f8f2",
                    "background": "#44475a",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "template": " in ",
                    "type": "text"
                },
                {
                    "foreground": "#f8f8f2",
                    "background": "#ff5555",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \uf0e7 root ",
                    "type": "root"
                },
                {
                    "foreground": "#44475a",
                    "background": "#00FFCC",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "unique"
                    },
                    "style": "powerline",
                    "template": " \uf07c {{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#282a36",
                    "background": "#28c4cf",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_upstream_icon": true,
                        "fetch_status": true
                    },
                    "style": "powerline",
                    "template": " {{ .UpstreamIcon }} {{ .HEAD }}{{ if or (.Working.Changed) (.Working.Untracked) }} \uf044 {{ .Working.String }}{{ end }}{{ if and (or (.Working.Changed) (.Working.Untracked)) (.Staging.Changed) }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
                    "type": "git"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#6272a4",
                    "style": "plain",
                    "template": "\u2570\u2500",
                    "type": "text"
                },
                {
                    "foreground": "#00FFCC",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#ff5555{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "diamond",
                    "template": "\uf054",
                    "type": "status"
                }
            ]
        }
    ],
    "final_space": true,
    "console_title_template": "{{ .Shell }} in {{ .Folder }}"
}